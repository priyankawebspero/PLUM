<script>
$('input.variants').on('change', function(){
   var featureImages = $(this).closest('li').find('img').data('src');
   var selectBox = $(this).closest('ul').find('span.select_box');
   var datatitle = $(this).data('title');
    selectBox.html(datatitle);
    featureImages = featureImages.substring(0, featureImages.indexOf('?v'));
    $('.product-img-box img').attr('src', featureImages);
})
</script>
