{% assign file_extension = 'png' %}
{% assign first_feild =  product.metafields.custom.first_feild.value %}
{% if first_feild != blank %}
<ul class="first_selection variants_list"> 
   {% if product.metafields.custom.first_text_feild != blank %}<span class="title">{{ product.metafields.custom.first_text_feild }}</span>{% endif %}
  <span class="select_box">- select varaiant -</span>
  {% for product in first_feild  %} 
    {% if product.available %}  
    <li>        
        <input type="radio" class="variants" name="first_selection" data-title="{{product.title}}" value="{{product.id}}" required>
        {% if product.featured_image != blank %}<span class="swatch_image"><img src="{{ product.title | handle | prepend: 'swatch-' | append: '.' | append: file_extension | file_url }}" class="swatches" data-src="{{ product.featured_image | image_url: width: 50 }}"></span>{% endif %}
    </li>
         {% endif %}
  {% endfor %}
</ul>
{% endif %}

