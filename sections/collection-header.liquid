<header class="collection-header collection-header-sections test">
  {% if section.settings.display_collection_image %}
    {% if collection.image %}
    {%- assign img_url = collection.image | img_url: 'master' -%}{%- assign img_url_mobile = collection.image | img_url: '768x'-%}{% elsif collection.description contains 'img' %}{%- assign img_url = collection.description | split: '<img' | last | split: '>' | first -%}{%- assign img_url_mobile = collection.description | split: '<img' | last | split: '>' | first -%}
    {% endif %}
    <div class="collection-image ggjgh">
      <div class="collection-desktop-img">
        {% if collection.image or collection.description contains 'img' or section.settings.collection_image != blank  %}
          {% if collection.image %}
          {% if collection.metafields.custom.collection_banner_link %} <a href="{{collection.metafields.custom.collection_banner_link}}"> {% endif %}      
           <img data-src="{{ img_url }}" src="{{ img_url }}" alt="{{ collection_title }}" class="lazyautosizes lazyloaded" data-sizes="auto"/>
          {% if collection.metafields.custom.collection_banner_link %}</a> {% endif %}
          {% else %} {% include 'mobile-collection-image', id:collection.handle %}{% endif %}
          {% else %}
        {% endif %}  
        <div class="page-header tab-abs">
          <h1> {% include 'multilang' with collection.title %}</h1>
        </div>
      </div>         
    {% endif %}
  {% assign collection_mobile_banner = collection.metafields.collection['collection mobile banner'] %}
   <div class="collection-mobile-img {% if collection_mobile_banner != 0 and collection_mobile_banner != blank %}{% else %}no-meta-image{% endif %}{% if section.settings.collection_image != blank %}style="height:0;"{% else %}style="height:0;"{% endif %}  " {% if collection_mobile_banner != 0 and collection_mobile_banner != blank %}{% else %}style="background-image:url('{{ img_url_mobile }}')"{% endif %} >     
     {% if collection_mobile_banner != 0 and collection_mobile_banner != blank %}
     {% if collection.metafields.custom.collection_banner_link %}<a href="{{collection.metafields.custom.collection_banner_link}}">{% endif %}
      <img data-src="{{ collection_mobile_banner }}" src="{{ collection_mobile_banner }}" class="lazyautosizes lazyloaded">
      {% if collection.metafields.custom.collection_banner_link %}</a>{% endif %}
      {% endif %}
    </div>    
  </div> 
    <div class="container">
    <div class="collection_navigation">
    <ul class="collection_nav">
        {%- comment %} 
          {% if collection.handle == "single-special-offer" or collection.handle == "trio" or collection.handle == "bestselling-combos" or collection.handle == "combos" or collection.handle == "gifting"  %}
           {% for link in linklists['collection-menu-1'].links -%}  
                  <li {% if link.url contains collection.handle %} class="active"{% endif %}>{{ link.title | link_to: link.url }}</li>      
                {%- endfor %}  
             {% else  %}
                 {% for link in linklists['collection-menu-2'].links -%}  
                  <li {% if link.url contains collection.handle %} class="active"{% endif %}>{{ link.title | link_to: link.url }}</li>      
              {%- endfor %} 
           {% endif  %}            
          {%- endcomment %}
            
              {% for link in linklists['collection-top-menus'].links -%}  
                <li {% if link.url contains collection.handle %} class="active"{% endif %}>{{ link.title | link_to: link.url }}</li>      
              {%- endfor %}    

    </ul>
    </div>
  </div>
<!--     <div class="header_ooffer">FREE full size Plum on orders above Rs 1299</div>  -->
</header>
<div class="collection-wrapper page-header">
  <div class="{% if settings.category_layout == "full_with" or template.suffix == 'fullwidth' %}container-padd60{% else %}container{% endif %}" style="text-align: center;">
    {% if collection.handle == "single-special-offer" or collection.handle == "trio" or collection.handle == "bestselling-combos" or collection.handle == "phy-offers" or collection.handle == "combos" or collection.handle == "single-products-offer" or collection.handle == "gifting" or collection.handle == "bestsellers" or collection.handle == "all-in-stock" %}
   {% else %}
      <h1 class="collection_title">
      {% include 'multilang' with collection.title %}
    </h1>
    {% endif %}
  </div>
 {% if section.settings.timer_true %} {% include 'count-down-b2g2' %}{% endif %}
</div>

{% schema %}
{
"name": "Collection Header",
"settings": [
{
"type": "checkbox",
"id": "display_collection_image",
"label": "Show collection image?",
"default": true
},
{
"type": "image_picker",
"id": "collection_image",
"label": "Image Category",
"info": "This image will show up when you don't add image in Collections Description"
},
{
"type": "checkbox",
"id": "display_collection_des",
"label": "Display Collections Description?",
"default": true
},
{
"type" : "color",
"id" : "color_wrapper",
"label" : "Color Wrapper",
"default" : "#fff"
},
{
"type" : "text",
"id" : "height_img",
"label" : "Image height",
"default" : "240px"
},{
"type": "checkbox",
"id": "timer_true",
"label": "Enable Timer",
"default": false
}
]
}
{% endschema %}